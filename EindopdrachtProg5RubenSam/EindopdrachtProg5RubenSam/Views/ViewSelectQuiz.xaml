<Window x:Class="EindopdrachtProg5RubenSam.Views.ViewSelectQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ViewSelectQuiz" Height="324.906" Width="583.019"
         DataContext="{Binding SelectQuizes, Source={StaticResource Locator}}">
    <Grid>
        <DataGrid SelectedItem="{Binding SelectedQuiz}" ItemsSource="{Binding Quizes}" Margin="10,57,10,77" AutoGenerateColumns = "False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="75"/>
                <DataGridTextColumn Header="Naam" Binding="{Binding Name}" Width="75"/>
                <DataGridTextColumn Header="Aant. vragen" Binding="{Binding Vragen}" Width="75"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Play" Command="{Binding PlayAQuiz}" HorizontalAlignment="Left" Margin="254,242,0,0" VerticalAlignment="Top" Width="75" Height="25"/>

    </Grid>
</Window>
